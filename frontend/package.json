{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "// --- LIFECYCLE ---": "",
    "dev": "next dev",
    "prebuild": "pnpm codegen",
    "build": "next build",
    "start": "next start",
    "validate": "pnpm check && pnpm check:types && pnpm test:unit:run && pnpm test:story:run && pnpm build",
    "// --- CHECKS (LINT/FORMAT/TYPES) ---": "",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check:types": "tsc --noEmit",
    "check": "biome check --write",
    "// --- TESTING (UNIT) ---": "",
    "test": "vitest -c vitest.config.ts",
    "test:unit": "vitest -c vitest.config.ts",
    "test:unit:run": "vitest -c vitest.config.ts run",
    "test:unit:ui": "vitest -c vitest.config.ts --ui",
    "test:coverage": "vitest -c vitest.config.ts run --coverage",
    "// --- TESTING (STORYBOOK) ---": "",
    "test:story": "vitest --config vitest.storybook.workspace.ts --project storybook",
    "test:story:run": "vitest --config vitest.storybook.workspace.ts --project storybook run",
    "// --- TESTING (E2E) ---": "",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui-host=0.0.0.0 --ui-port=9323",
    "test:e2e:report": "playwright show-report --host=0.0.0.0",
    "playwright:install": "playwright install",
    "// --- STORYBOOK ---": "",
    "storybook": "storybook dev -p 6006 --no-open --disable-telemetry",
    "storybook:dev": "pnpm storybook",
    "storybook:build": "storybook build --disable-telemetry",
    "// --- CODEGEN ---": "",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch"
  },
  "dependencies": {
    "@apollo/client": "^4.1.0",
    "@apollo/client-integration-nextjs": "^0.14.4",
    "graphql": "^16.12.0",
    "next": "16.1.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@graphql-codegen/typescript-react-apollo": "^4.4.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@mdx-js/react": "^3.1.1",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/nextjs-vite": "^10.1.11",
    "@storybook/react": "^10.1.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "4.0.16",
    "@vitest/browser-playwright": "4.0.16",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.26.0"
}
