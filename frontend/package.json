{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "playwright:install": "playwright install",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "check:unsafe": "biome check --write --unsafe .",
    "test": "vitest -c vitest.config.ts",
    "test:ui": "vitest -c vitest.config.ts --ui",
    "test:run": "vitest -c vitest.config.ts run",
    "coverage": "vitest -c vitest.config.ts run --coverage",
    "test:storybook": "vitest --config vitest.storybook.workspace.ts --project storybook run",
    "test:all": "vitest --config vitest.storybook.workspace.ts run",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report --host=0.0.0.0",
    "test:e2e:ui": "playwright test --ui-host=0.0.0.0 --ui-port=9323",
    "storybook:build": "storybook build --disable-telemetry",
    "storybook:run": "storybook dev -p 6006 --no-open --disable-telemetry",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch"
  },
  "dependencies": {
    "@apollo/client": "^4.0.11",
    "@apollo/client-integration-nextjs": "^0.14.3",
    "graphql": "^16.12.0",
    "next": "16.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@chromatic-com/storybook": "^4.1.3",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@graphql-codegen/typescript-react-apollo": "^4.3.4",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@mdx-js/react": "^3.1.1",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/nextjs-vite": "^10.1.10",
    "@storybook/react": "^10.1.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "4.0.16",
    "@vitest/browser-playwright": "4.0.16",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "storybook": "^10.1.10",
    "styled-jsx": "^5.1.7",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "4.0.16"
  },
  "packageManager": "pnpm@10.26.0"
}
